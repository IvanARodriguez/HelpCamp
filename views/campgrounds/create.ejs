<% layout('layouts/boilerplate') %>

<div class="max-w-2xl mx-auto px-4 py-8 bg-white shadow-md rounded-lg">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Create a New Campground</h1>

  <form action="/campgrounds" method="POST" class="space-y-6">
    <div>
      <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
      <input type="text" id="title" name="campground[title]" required
        class="px-2 mt-1 min-h-11 block w-full bg-gray-100 rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50">
    </div>

    <div>
      <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
      <input type="text" id="location" name="campground[location]" required
        class="mt-1 px-2 min-h-11 block w-full bg-gray-100 rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50">
    </div>

    <div>
      <label for="price" class="block text-sm font-medium text-gray-700">Price (USD)</label>
      <input type="number" id="price" name="campground[price]" min="0" step="0.01" required
        class="px-2 mt-1 min-h-11 block w-full bg-gray-100 rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50"
        placeholder="e.g., 49.99">
    </div>

    <div>
      <label for="image" class="block text-sm font-medium text-gray-700">Image URL</label>
      <input type="url" id="image" name="campground[image]" required
        class="mt-1 px-2 min-h-11 block w-full bg-gray-100 rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50"
        placeholder="https://example.com/image.jpg">
    </div>

    <div>
      <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
      <textarea id="description" name="campground[description]" rows="4" required
        class="mt-1 px-2 block w-full bg-gray-100 rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50"
        placeholder="Write a brief description of the campground"></textarea>
    </div>

    <div class="pt-4">
      <button type="submit"
        class="inline-flex items-center justify-center px-4 py-2 bg-blue-600 border border-transparent rounded-md font-semibold text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        Create Campground
      </button>
    </div>
  </form>
</div>