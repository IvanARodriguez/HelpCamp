<% layout('layouts/boilerplate') %>

<div class="flex-grow container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto px-4 py-8 bg-white shadow-md rounded-lg">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Create a New Campground</h1>

    <form id="campgroundForm" class="needs-validation space-y-6" action="/campgrounds" method="POST" novalidate>
      <!-- Title -->
      <div>
        <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
        <input required id="title" name="campground[title]" type="text" class="form-input peer mt-1 px-2 min-h-11 block w-full rounded-md border border-gray-300 shadow-sm bg-gray-100
                 focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50">
        <p class="invalid-feedback text-sm text-red-600 hidden">Title is required.</p>
        <p class="valid-feedback text-sm text-green-600 hidden">Looks good!</p>
      </div>

      <!-- Location -->
      <div>
        <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
        <input required id="location" name="campground[location]" type="text" class="form-input peer mt-1 px-2 min-h-11 block w-full rounded-md border border-gray-300 shadow-sm bg-gray-100
                 focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50">
        <p class="invalid-feedback text-sm text-red-600 hidden">Location is required.</p>
        <p class="valid-feedback text-sm text-green-600 hidden">Looks good!</p>
      </div>

      <!-- Price -->
      <div>
        <label for="price" class="block text-sm font-medium text-gray-700">Price (USD)</label>
        <input required id="price" name="campground[price]" type="number" min="0" step="0.01" class="form-input peer mt-1 px-2 min-h-11 block w-full rounded-md border border-gray-300 shadow-sm bg-gray-100
                 focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50" placeholder="e.g., 49.99">
        <p class="invalid-feedback text-sm text-red-600 hidden">Please enter a valid price.</p>
        <p class="valid-feedback text-sm text-green-600 hidden">Looks good!</p>
      </div>

      <!-- Image -->
      <div>
        <label for="image" class="block text-sm font-medium text-gray-700">Image URL</label>
        <input required id="image" name="campground[image]" type="url" class="form-input peer mt-1 px-2 min-h-11 block w-full rounded-md border border-gray-300 shadow-sm bg-gray-100
                 focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50"
          placeholder="https://example.com/image.jpg">
        <p class="invalid-feedback text-sm text-red-600 hidden">Please enter a valid URL.</p>
        <p class="valid-feedback text-sm text-green-600 hidden">Looks good!</p>
      </div>

      <!-- Description -->
      <div>
        <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
        <textarea required id="description" name="campground[description]" rows="4" class="form-input peer mt-1 px-2 block w-full rounded-md border border-gray-300 shadow-sm bg-gray-100
                 focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50"
          placeholder="Write a brief description of the campground"></textarea>
        <p class="invalid-feedback text-sm text-red-600 hidden">Description is required.</p>
        <p class="valid-feedback text-sm text-green-600 hidden">Looks good!</p>
      </div>

      <!-- Submit -->
      <div class="pt-4">
        <button type="submit"
          class="inline-flex items-center justify-center px-4 py-2 bg-blue-600 border border-transparent rounded-md font-semibold text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          Create Campground
        </button>
      </div>
    </form>
  </div>
</div>

<script type="module" src="/js/form-validation.js"></script>