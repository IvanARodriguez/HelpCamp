<% layout('layouts/boilerplate') %>

<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <img src="<%=campground.image%>" alt="image of <%= campground.title %>" class="w-full h-96 object-cover" />

    <div class="p-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= campground.title %> | <%=formattedPrice%></h1>
      <h2 class="text-lg text-gray-600 mb-4"><%= campground.location %></h2>
      <p><%= campground.description %></p>

      <div class="flex flex-wrap gap-3 mt-6">
        <a href="/campgrounds/<%= campground._id %>/edit"
          class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white text-sm font-medium rounded-md hover:bg-yellow-600">
          ✏️ Edit
        </a>

        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST"
          onsubmit="return confirm('Are you sure you want to delete this campground?')">
          <button type="submit"
            class="inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700">
            🗑️ Delete
          </button>
        </form>
      </div>
    </div>
  </div>

  <div class="mt-8 flex flex-wrap gap-4">
    <a href="/campgrounds" class="text-blue-600 hover:underline text-sm">
      &larr; Back to All Campgrounds
    </a>
    <a href="/campgrounds/create" class="text-blue-600 hover:underline text-sm">
      + Add Campground
    </a>
  </div>
</div>